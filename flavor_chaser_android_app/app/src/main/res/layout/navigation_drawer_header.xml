<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/textviewNavigationDrawerUsername"
        app:layout_constraintEnd_toEndOf="@id/textviewNavigationDrawerUsername"
        app:layout_constraintBottom_toTopOf="@id/textviewNavigationDrawerUsername"
        />

    <TextView
        android:id="@+id/textviewNavigationDrawerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Rotaru Teodor Gabriel"
        android:textSize="20sp"
        android:fontFamily="@font/russo_one"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>